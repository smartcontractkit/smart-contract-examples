{
  "name": "Data Feeds - Getting Started Guide",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A getting started guide for using Chainlink Data Feeds",
  "scripts": {
    "compile": "hardhat compile",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "npm run lint:contracts && npm run format:check",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:contracts": "solhint 'contracts/*.sol'",
    "lint:contracts:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "devDependencies": {
    "@chainlink/contracts": "1.0.0",
    "@chainlink/env-enc": "^1.0.5",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "lint-staged": "^13.0.3",
    "ora": "5.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.6.2",
    "solhint-plugin-chainlink-solidity": "github:smartcontractkit/chainlink-solhint-rules",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "lint-staged": {
    "*.{css,md,mdx,yml,yaml,astro}": "prettier --write",
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint"
    ],
    "*.sol": [
      "prettier --write",
      "solhint"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "printWidth": 120
  }
}
